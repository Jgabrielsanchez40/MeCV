<div class="section sectionform" style="margin-left: 22rem;">
    <div class="article">
    <div class="card">
        <h1>Actualizar Idiomas y Nivel</h1>
   <form action="/lang/edit-lang/{{langedit._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-person">
            <label for="idioms">Idioma</label>
            <input type="text" name="idioms" required="true" value="{{langedit.idioms}}">
        </div>
        <div class="form-person">
            <label for="level">Nivel</label>
            <input type="text" list="lang" name="level" value="{{langedit.level}}">
                <datalist id="lang">
                 <option value="Nativo">Nativo</option>
                 <option value="Basico">Basico</option>
                <option value="Intermedio">Intermedio</option>
                <option value="Avanzado">Avanzado</option>
                </datalist>
       </div>
       <div class="form-person">
            <span style="font-size: 12px; margin-left: 12rem;">Para cambiar borrar y seleccionar</span>
        </div>
            <button type="submit" class="btn-primary">Salvar</button>
   </form>
</div></div></div>